<!DOCTYPE html>
<html lang="en">
<head>
  <title>EGyan</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/login.css" type="text/css" >
  <link rel="stylesheet" href="/sidenav.css" type="text/css" >

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">EGyan</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
        <li><a href="#">Login</a></li>
        <li><a href="#">My DashBoard</a></li>
      </ul>
    </div>
  </nav>
  <form action="/api/register" method ="post" style="border:1px solid #ccc">
    <div class="container">
      <h1>New to EGyan? Sign up for free!</h1>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <label for="name"><b>Full Name</b></label>
          <input type="text" placeholder="Enter Name" name="name" required>
        </div>
        <div class="col-sm-2">
          <label for="type"><b>Type</b></label>
          <select name="type">
            <option value="1">Instructor</option>
            <option value="2">Student</option>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <label for="email"><b>Email ID</b></label>
          <input type="text" placeholder="Enter Email" name="email" required>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <label for="password"><b>Password</b></label>
          <input type="password" placeholder="Enter Password" name="password" required>
        </div>
        <div class="col-sm-3">
          <label for="confirmPassword"><b>Confirm Password</b></label>
          <input type="password" placeholder="Enter Password" name="confirmPassword" required>
        </div>
      </div>
      <div class="clearfix">
        <button type="submit" class="btn btn-primary signupbtn">Register Now!</button>
      </div>
      <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert-danger"><%= message %></div>
      <% } %>
    </div>
    </div>
  </form>
  <div class="vl"></div>
  <form action="/api/login" method="POST" style="border:1px solid #ccc">
    <div class="container">
      <h1>Have An Account? Log In Now!</h1>
      <hr>
      <div class="row">
        <div class="col-sm-6">
          <label for="email"><b>Email ID</b></label>
          <input type="text" placeholder="Enter Email" name="email" required>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <label for="password"><b>Password</b></label>
          <input type="password" placeholder="Enter Password" name="password" required>
        </div>
      </div>
      <div class="clearfix">
        <button type="submit" class="btn btn-primary signupbtn">Login</button>
      </div>
    </div>
    </div>
  </form>
</body>
</html>